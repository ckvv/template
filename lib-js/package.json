{
  "name": "lib-js",
  "type": "module",
  "version": "1.0.0",
  "private": false,
  "packageManager": "pnpm@10.8.0",
  "description": "Create the startup template for the TS lib library.",
  "author": "ckvv",
  "license": "MIT",
  "repository": "https://github.com/ckvv/template",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "node --import=tsx src/index.ts",
    "build": "tsdown",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix",
    "publish:npm": "npm run build && npm publish --registry https://registry.npmjs.org/ --access public"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "eslint": "^9.24.0",
    "lint-staged": "^15.5.1",
    "simple-git-hooks": "^2.12.1",
    "tsdown": "^0.8.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx tsx scripts/verify-commit.ts"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,tsx,jsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
