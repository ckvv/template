{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "#*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
