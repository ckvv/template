{
  "name": "lib-js",
  "type": "module",
  "version": "1.0.0",
  "private": false,
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "description": "Create the startup template for the TS lib library.",
  "author": "ckvv",
  "license": "MIT",
  "repository": "https://github.com/ckvv/template",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "commit:generate": "node --experimental-strip-types src/index.ts",
    "dev": "node --import=tsx src/index.ts",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix",
    "publish:npm": "npm run build && npm publish --registry https://registry.npmjs.org/ --access public"
  },
  "devDependencies": {
    "@types/node": "^24",
    "@antfu/eslint-config": "^6.7.3",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.3",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,tsx,jsx,vue,md}": [
      "eslint --fix"
    ]
  }
}