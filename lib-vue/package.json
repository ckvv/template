{
  "name": "lib-vue",
  "type": "module",
  "version": "1.0.0",
  "private": false,
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "description": "Create the startup template for the TS lib library.",
  "author": "ckvv",
  "license": "MIT",
  "repository": "https://github.com/ckvv/template",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "play": "vite -c vite.playground.ts",
    "dev": "node --import=tsx src/index.ts",
    "build": "tsdown",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix",
    "publish:npm": "npm run build && npm publish --registry https://registry.npmjs.org/ --access public"
  },
  "dependencies": {
    "unocss": "^66.6.0",
    "vue": "^3.5.27"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "unplugin-vue": "7.1.1",
    "vite": "^8.0.0-beta.12",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "rolldown",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,tsx,jsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
